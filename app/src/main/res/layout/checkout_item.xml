<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:id="@+id/checkout_layout_id"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/checkout_image_id"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/checkout_name_id"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="პროდუქტის სახელი"
                android:textSize="13sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/product_price_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 GEL"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/quantity_id"
                android:layout_alignStart="@+id/quantity_id" />




            <ImageView
                android:id="@+id/plus_id"
                style="@style/ClickEffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:srcCompat="@drawable/pl"
                tools:ignore="MissingPrefix"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/quantity_id"
                android:layout_toEndOf="@+id/quantity_id"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" />

            <TextView
                android:id="@+id/quantity_id"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:text="7"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/minus_id"
                style="@style/ClickEffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:srcCompat="@drawable/minus"
                tools:ignore="MissingPrefix"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/checkout_name_id"
                android:layout_alignStart="@+id/checkout_name_id" />

            <!--<WebView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/webView"-->
                <!--android:layout_above="@+id/product_price_id"-->
                <!--android:layout_toRightOf="@+id/product_price_id"-->
                <!--android:layout_toEndOf="@+id/product_price_id" />-->

        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/divider" />

</LinearLayout>