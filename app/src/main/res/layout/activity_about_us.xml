<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context="com.example.irakli.soplidange.AboutUs">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/about_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/trans"
        android:elevation="7dp">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/about_us_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/about" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_us_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_us_image"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:text="@string/about_us"
                android:textColor="#314171"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/fff"
                android:background="#e7ede9e9" />


            <TextView
                android:id="@+id/text13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_id"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:paddingTop="5dp"
                android:text="@string/about_us_text" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text13"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/our_partnerships"
                android:textColor="#314171"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/geopay_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginLeft="32dp"
                android:src="@drawable/partgeo" />

            <ImageView

                android:id="@+id/enpard_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/geopay_id"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/enpard" />

            <ImageView
                android:id="@+id/farmer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/partfarmers"
                android:layout_above="@+id/enpard_id"
                android:layout_toRightOf="@+id/fchain_id"
                android:layout_toEndOf="@+id/fchain_id"
                android:layout_marginLeft="61dp"
                android:layout_marginStart="61dp" />

            <ImageView
                android:id="@+id/fchain_id"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:paddingBottom="5dp"
                android:src="@drawable/fchain"
                android:layout_below="@+id/text1"
                android:layout_toRightOf="@+id/text1"
                android:layout_toEndOf="@+id/text1" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
