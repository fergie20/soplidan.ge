<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context="com.example.irakli.soplidange.AboutUs">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/about_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/trans"
        android:elevation="7dp">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/about_us_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/soplidange" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/about_us_image">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/about_us"
                android:textColor="#314171"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/fff"
                android:background="#e7ede9e9" />


            <TextView
                android:id="@+id/text13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_id"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:paddingTop="5dp"
                android:text="@string/about_us_text" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text13"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/our_partnerships"
                android:textColor="#314171"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/fchain_id"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text1"
                android:layout_marginTop="0dp"
                android:src="@drawable/fchain" />

            <ImageView
                android:id="@+id/farmer_id"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/geopay_id"
                android:src="@drawable/gfa" />

            <ImageView
                android:id="@+id/geopay_id"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_alignTop="@+id/fchain_id"
                android:layout_centerHorizontal="true"
                android:src="@drawable/partgeo" />

            <ImageView

                android:id="@+id/enpard_id"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fchain_id"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/enpard" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
