<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxHeight="250dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/dialog_image_id"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@android:drawable/alert_dark_frame" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/dialog_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="saxeli"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dialog_price_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="15.7 GEL"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18dp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dialog_minus_id"
                        style="@style/ClickEffect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/quantity_id"
                        android:padding="7dp"
                        android:src="@mipmap/ic_remove_black_24dp" />

                    <EditText
                        android:id="@+id/dialog_quantity_id"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/plus_id"
                        android:background="@drawable/text_view_border"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="1" />

                    <ImageView
                        android:id="@+id/dialog_plus_id"
                        style="@style/ClickEffect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="7dp"
                        android:src="@mipmap/ic_add_black_24dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_description_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dbchbsdhmc bhsdbch jshdv hjsvjcasjdbcj" />

        <Button
            android:id="@+id/dialog_addbutton_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="დაამატე კალათაში"
            android:textColor="@android:color/white"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>
