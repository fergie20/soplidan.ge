<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_id"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="10dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/recycler_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="16dp"
        android:paddingLeft="3dp"
        android:textSize="16sp"
        android:text="categoriebi"
        android:maxLines="1"
        android:maxLength="25"
        android:ellipsize="end"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@android:color/holo_red_light"
        android:text="(4)"
        android:textStyle="italic|bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/recycler_item_id"
        android:layout_toEndOf="@+id/recycler_item_id"
        android:id="@+id/product_count" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="#b3b3b3"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_alignBottom="@+id/product_count"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"/>

    <include layout="@layout/divider"/>

</RelativeLayout>